<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_edittext"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/line_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/font_blue_text"/>

    <LinearLayout
        android:layout_below="@+id/line_num"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/font_main_aaaaaa"
            android:layout_marginRight="10dp"
            android:text="开往:"/>

        <TextView
            android:id="@+id/to_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/font_blue_text"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/line_history_clean"/>
    </LinearLayout>

</RelativeLayout>