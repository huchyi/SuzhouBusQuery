<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@null"
        android:src="@drawable/transfer_car" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp">

        <ImageView
            android:id="@+id/line_line"
            android:layout_width="15dp"
            android:layout_height="50dp"
            android:background="@drawable/transfer_detail_line"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/line_station"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/transfer_detail_station_radio" />


        <ImageView
            android:id="@+id/line_start"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-2dp"
            android:background="@drawable/transfer_detail_end"
            android:contentDescription="@null"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/line_end"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-2dp"
            android:background="@drawable/transfer_detail_end"
            android:contentDescription="@null"
            android:scaleType="fitXY" />

    </RelativeLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#aaaaaa"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/car_bottom_line"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_height="1dp"
        android:background="#d2d2d2"/>

</RelativeLayout>